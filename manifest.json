{
    "name": "Disinformation Extension",
    "version": "1.0",
    "description": "POC for auto-reply like feature for FB messenger",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
     "content_scripts": [
       {
         "matches": ["*://*.facebook.com/*",
                     "*://*.messenger.com/*"],
         "css": ["styles.css"],
         "js": ["common-resources.js",
                "common-settings.js",
                "content.js",
                "content-popover.js",
                "content-add-widgets.js",                
                "content-evaluation.js",
                "content-evaluator-newsguard.js",
                "content-evaluator-cofacts.js",
                "content-fb.js",
                "content-handler-fb-feed-messagebox.js",
                "content-handler-fb-feed-post.js",
                "content-handler-fb-messenger.js"]
       }
    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "images/check-t.png",
        "images/check-t-empty.png",
        "images/check-t-green.png",
        "images/check-t-opinion.png",
        "images/check-t-grey.png",
        "images/check-t-questionmark.png",
        "images/check-t-red.png",
        "images/check-t-error.svg",
        "images/green-check-mark.jpg",
        "images/red-warning.jpg",
        "images/big-questionmark.png",
        "images/twisc.png",
        "popover-template.html"
    ]
}
