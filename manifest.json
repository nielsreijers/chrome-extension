{
    "name": "Disinformation Extension",
    "version": "1.0",
    "description": "POC for auto-reply like feature for FB messenger",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
     "content_scripts": [
       {
         "matches": ["*://*.facebook.com/*"],
         "css": ["content.css"],
         "js": ["content.js",
                "content-resources.js",
                "content-popover.js",
                "content-taglinks.js",                
                "content-evaluation.js",
                "content-fb.js",
                "content-fb-messagebox-handler.js"]
       }
    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "images/check-t.png",
        "images/check-t-empty.png",
        "images/check-t-green.png",
        "images/check-t-grey.png",
        "images/check-t-questionmark.png",
        "images/check-t-red.png",
        "popover-template.html"
    ]
}
